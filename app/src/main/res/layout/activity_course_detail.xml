<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".ui.student.CourseDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="WebViewLayout">
            <!-- Thanh công cụ -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/sliver"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiêt khóa học"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_menu_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/menu_icon"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_notification_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/baseline_notifications_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_cart_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/all_cart"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/img_notification_icon"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- YoutubePlayerView cho trailer -->

            <!-- Tiêu đề khóa học -->
            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/wv_course_trailer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ctl_toolbar"
                tools:layout_editor_absoluteX="0dp" />
            <Button
                android:id="@+id/btn_toggle_fullscreen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_zoom_out_map_24"
                app:layout_constraintTop_toBottomOf="@id/wv_course_trailer"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_course_name_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên Khóa học"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/wv_course_trailer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_course_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_course_name_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Tóm tắt này là của 1 khóa học hết suwx tuyệt với ai cũng muốn học và không ai có thể không học được"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/v_divide"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_course_summary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_all_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/v_divide"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Nội dung bài học"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_lesson"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_all_lesson"
                app:layout_constraintLeft_toLeftOf="@id/tv_all_lesson"
                app:layout_constraintRight_toRightOf="@id/tv_all_lesson"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:paddingBottom="50dp"
                android:clipToPadding="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sliver"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_buy"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Mua khóa học"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_add_to_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cart"
                    android:layout_marginRight="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btn_buy"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@id/img_support_buy"
                    android:layout_marginLeft="32dp"
                    android:background="@color/black"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_support_buy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/comment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="32dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
